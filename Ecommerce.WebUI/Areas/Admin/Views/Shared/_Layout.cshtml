                    </div>
                    <div class="my-4">
                        <div class="row text-center">
                            <a asp-area="Admin" asp-controller="Accounts" asp-action="LogoutAdmin" class=" btn offset-3 col-6 btn-sm btn-danger"> Logout </a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <partial name="_Notification">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; @DateTime.Today.ToShortDateString() - Brand Matrix | Design and Developed By <strong>M. Hussain Saqib</strong>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.0/js/bootstrap.bundle.min.js" integrity="sha512-m4O4JcMMJlL1ig39OFwwXdHtX9Y0f5J5KWic7Q1dWtC0eb15PUBnYZRp2z2ROkWJX9L9pCgN+1xM6MwSTbcNnA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
